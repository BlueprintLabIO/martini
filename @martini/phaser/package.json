{
  "name": "@martini-kit/phaser",
  "version": "2.0.0-alpha.1",
  "type": "module",
  "private": true,
  "description": "Phaser 3 adapter for @martini-kit/core - host-authoritative multiplayer",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sdk-bundle": "./dist/sdk-bundle.json",
    "./dist/browser.js": "./dist/browser.js"
  },
  "scripts": {
    "build": "tsc && tsx scripts/build-browser-bundle.ts",
    "build:types": "tsc",
    "build:browser": "tsx scripts/build-browser-bundle.ts",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@martini-kit/core": "workspace:*",
    "phaser": "^3.0.0"
  },
  "dependencies": {
    "@martini-kit/core": "workspace:*",
    "@martini-kit/transport-trystero": "workspace:*",
    "@martini-kit/transport-local": "workspace:*",
    "@martini-kit/transport-iframe-bridge": "workspace:*"
  }
}

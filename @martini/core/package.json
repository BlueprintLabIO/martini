{
  "name": "@martini-kit/core",
  "version": "2.0.0-alpha.1",
  "type": "module",
  "private": true,
  "description": "Engine-agnostic multiplayer SDK - host-authoritative state sync",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sdk-bundle": "./dist/sdk-bundle.json",
    "./dist/browser.js": "./dist/browser.js"
  },
  "scripts": {
    "build": "tsc && tsx scripts/build-browser-bundle.ts",
    "build:types": "tsc",
    "build:browser": "tsx scripts/build-browser-bundle.ts",
    "dev": "tsc --watch",
    "dev:build": "tsc --watch --preserveWatchOutput",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}

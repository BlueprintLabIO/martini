{
  "name": "@martini-kit/transport-iframe-bridge",
  "version": "0.1.0",
  "description": "Iframe-based transport for sandboxed multiplayer testing",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sdk-bundle": "./dist/sdk-bundle.json",
    "./dist/browser.js": "./dist/browser.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsx scripts/build-browser-bundle.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:types": "tsc",
    "build:browser": "tsx scripts/build-browser-bundle.ts"
  },
  "keywords": [
    "martini-kit",
    "multiplayer",
    "transport",
    "iframe",
    "testing"
  ],
  "author": "Yao <yao@blueprintlab.io>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueprintLabIO/martini.git",
    "directory": "@martini-kit/transport-iframe-bridge"
  },
  "homepage": "https://github.com/BlueprintLabIO/martini",
  "bugs": {
    "url": "https://github.com/BlueprintLabIO/martini/issues"
  },
  "dependencies": {
    "@martini-kit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.27.0",
    "happy-dom": "^15.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.0.0"
  }
}

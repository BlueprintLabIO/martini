{
  "name": "@martini-kit/core",
  "version": "0.1.0",
  "type": "module",
  "description": "Multiplayer without networking. Engine-agnostic multiplayer SDK with host-authoritative state sync.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "Apache-2.0",
  "author": "Yao <yao@blueprintlab.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlueprintLabIO/martini.git",
    "directory": "@martini/core"
  },
  "homepage": "https://github.com/BlueprintLabIO/martini",
  "bugs": {
    "url": "https://github.com/BlueprintLabIO/martini/issues"
  },
  "keywords": [
    "multiplayer",
    "game",
    "phaser",
    "p2p",
    "websocket",
    "state-sync",
    "host-authoritative",
    "real-time",
    "networking",
    "gamedev"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sdk-bundle": "./dist/sdk-bundle.json",
    "./dist/browser.js": "./dist/browser.js"
  },
  "scripts": {
    "build": "tsc && tsx scripts/build-browser-bundle.ts",
    "build:types": "tsc",
    "build:browser": "tsx scripts/build-browser-bundle.ts",
    "dev": "tsc --watch",
    "dev:build": "tsc --watch --preserveWatchOutput",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}

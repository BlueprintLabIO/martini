{
  "name": "@martini/devtools",
  "version": "2.0.0-alpha.1",
  "description": "Development tools for Martini - state inspector, action history, network monitor",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && pnpm build:browser",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "build:browser": "esbuild browser.ts --bundle --format=iife --global-name=Martini --outfile=dist/martini-devtools.browser.js",
    "postbuild": "cp dist/martini-devtools.browser.js ../ide/static/ 2>/dev/null || echo \"Skipping copy to IDE (dir may not exist)\""
  },
  "keywords": [
    "devtools",
    "inspector",
    "debugging",
    "multiplayer",
    "state",
    "martini"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@martini/transport-local": "workspace:*",
    "@types/node": "^22.10.2",
    "esbuild": "^0.27.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@martini/core": "workspace:*"
  }
}
{
  "name": "@martini/phaser",
  "version": "2.0.0-alpha.1",
  "type": "module",
  "private": true,
  "description": "Phaser 3 adapter for @martini/core - host-authoritative multiplayer",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && pnpm build:browser",
    "build:browser": "esbuild browser.ts --bundle --format=iife --global-name=MartiniMultiplayer --outfile=dist/martini-multiplayer.browser.js",
    "postbuild": "pnpm copy:bundles",
    "copy:bundles": "cp dist/martini-multiplayer.browser.js ../../apps/vesper/static/ 2>/dev/null || echo 'Skipping vesper' && cp dist/martini-multiplayer.browser.js ../demos/static/ 2>/dev/null || echo 'Skipping demos'",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.24.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@martini/core": "workspace:*",
    "phaser": "^3.0.0"
  },
  "dependencies": {
    "@martini/core": "workspace:*",
    "@martini/transport-trystero": "workspace:*",
    "@martini/transport-local": "workspace:*",
    "@martini/transport-iframe-bridge": "workspace:*"
  }
}
